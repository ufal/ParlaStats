{
	"target_databases":["parczech4_0"],
	"description":"TOP 10 male speakers with most speeches",
	"steps": [
		{
			"goal":"main",
			"columns":[
				"person.person_id", 
				{
					"real":"speech.id",
					"alias":"total_speeches",
					"agg_func":"COUNT"
				}
			],
			"aggregation": {
				"group_by":["person.person_id", "persname.forename",
					        "persname.surname"],
				"order_by":[
					{
						"column":"total_speeches",
						"direction":"DESC"
					}
				]
			},
			"filtering": {
				"conditions":[
					{
						"column":"person.sex",
						"operator":"=",
						"value":"'M'"
					}
				]
			},
			"limit":"10"
		}
	]
}
