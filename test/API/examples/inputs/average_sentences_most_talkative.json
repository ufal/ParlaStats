{
	"target_databases":["parczech4_0"],
	"description":"Average sentences of speeches by most talkative politician across all  roles they held across all their affiliations.",
	"steps": [
		{
			"goal":"find_most_talkative",
			"columns":[
				"person.person_id", 
				{
					"real":"speech.id",
					"alias":"total_speeches",
					"agg_func":"COUNT"
				}
			],
			"aggregation": {
				"group_by":["person.person_id"],
				"order_by":[
					{
						"column":"total_speeches",
						"direction":"DESC"
					}
				]
			},
			"filtering": {	
				"conditions":[]
				
			},
			"limit":"1"
		},
		{
			"goal":"average_sentence_counts",
			"columns":[
				"affiliation.role", 
				{
					"real":"speech.sentence_count",
					"alias":"average_sentence_count",
					"agg_func":"AVG"
				}
			],
			"aggregation": {
				"group_by":["affiliation.role"],
				"order_by":[]
			},
			"filtering": {
				"conditions": [
					{
						"column":"person.person_id",
						"operator":"=",
						"value":"step_result/find_most_talkative/person.person_id"
					},
					{
						"column":"speech.date",
						"operator":">=",
						"value":"affiliation.since"
					},
					{
						"column":"speech.date",
						"operator":"<=",
						"value":"affiliation.until"
					}
				]
				
			},
			"limit":""
		}
	]
}
