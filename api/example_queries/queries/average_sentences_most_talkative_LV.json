{
	"target_databases":["databaseLV"],
	"description":"Average sentences of speeches of most talkative politician across all roles they held across all their affiliations.",
	"aggregation": {
		"group_by":["affiliation.role","person.person_id", "persName.forename", "persName.surname"],
		"order_by":[]
	},
	"filtering": {
		"columns":["affiliation.role", "AVG(speech.sentence_count) AS average_sentences"],
		"conditions":[
			{
				"column":"person.person_id",
				"operator":"=",
				"value":"'DaudzeGundars'"
			},
			{
				"column":"speech.date",
				"operator":">=",
				"value":"affiliation.since"
			},
			{
				"column":"speech.date",
				"operator":"<=",
				"value":"affiliation.until"
			}
		],
		"limit":""
	}
}
