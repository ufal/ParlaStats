{
	"target_databases":["databaseLV", "databaseCS"],
	"description":"TOP 10 male speakers with most speeches",
	"aggregation": {
		"group_by":["persName.forename", "persName.surname", "person.person_id"],
		"order_by":[
			{
				"column":"total_speeches",
				"direction":"DESC"
			}
		]
	},
	"filtering": {
		"columns":["person.person_id","persName.forename","persName.surname", "COUNT(speech.id) AS total_speeches"],
		"conditions": [
			{
				"column":"person.sex",
				"operator":"=",
				"value":"'M'"
			}
		],
		"limit":"10"
	}
}
