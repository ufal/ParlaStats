{
	"target_databases":["databaseCS"],
	"description":"How many sentences on average contained speeches by person for each role they occupied within organisations throughout recorded career.",
	"aggregation": {
		"group_by":["affiliation.role","person.person_id", "persName.forename", "persName.surname", "affiliation.role"],
		"order_by":[]
	},
	"filtering": {
		"columns":["affiliation.role", "AVG(speech.sentence_count) AS average_sentences"],
		"conditions":[
			{
				"column":"person.person_id",
				"operator":"=",
				"value":"'VojtechFilip.1955'"			
			},
			{
				"column":"speech.date",
				"operator":">=",
				"value":"affiliation.since"
			},
			{
				"column":"speech.date",
				"operator":"<=",
				"value":"affiliation.until"
			}
		],
		"limit":""
	}
}
