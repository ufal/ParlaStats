{
	"target_databases":["databaseCS"],
	"description":"Average named entity references by ANO members",
	"aggregation": {
		"group_by":["person.person_id","organisation.organisation_id", "persName.forename", "persName.surname"],
		"order_by":[
			{
				"column":"average_named_entities",
				"direction":"DESC"
			}
		]
	},
	"filtering": {
		"columns":["persName.forename","persName.surname","AVG(speech.named_entity_count) AS average_named_entities"],
		"conditions":[
			{
				"column":"organisation.organisation_id",
				"operator":" LIKE ",
				"value":"'%%ANO%%'"
			},
			{
				"column":"speech.date",
				"operator":">=",
				"value":"affiliation.since"
			},
			{
				"column":"speech.date",
				"operator":"<=",
				"value":"affiliation.until"
			}
		],
		"limit":""
	}
}
