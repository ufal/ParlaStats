{
	"graph":"N",
	"description":"TOP 10 male speakers with most speeches",
	"aggregation": {
		"tables":["person", "speech", "persName"],
		"joins": [
			{
				"type":"INNER",
				"left_table":"person",
				"left_column":"person_id",
				"right_table":"speech",
				"right_column":"author_id"
			},
			{
				"type":"INNER",
				"left_table":"person",
				"left_column":"person_id",
				"right_table":"persName",
				"right_column":"person_id"
			}
		],
		"group_by":["persName.forename", "persName.surname"],
		"order_by":[
			{
				"column":"total_speeches",
				"direction": "DESC"
			}
		]
	},
	"filtering": {
		"columns":["persName.forename", "persName.surname", "COUNT(speech.id) AS total_speeches"],
		"conditions": [
			{
				"column":"person.sex",
				"operator":"=",
				"value":"'M'"
			}
		],
		"limit":"10"
	}
}
