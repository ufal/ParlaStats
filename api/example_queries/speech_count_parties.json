{
	"graph":"N",
	"description":"How many speeches were given by members of each political party?",
	"aggregation": {
		"tables": ["person", "affiliation", "organisation", "speech"],
		"joins": [
			{
				"type":"INNER",
				"left_table":"person",
				"left_column":"person_id",
				"right_table":"affiliation",
				"right_column":"person_id"
			},
			{
				"type":"INNER",
				"left_table":"affiliation",
				"left_column":"organisation_id",
				"right_table":"organisation",
				"right_column":"organisation_id"
			},
			{
				"type":"INNER",
				"left_table":"person",
				"left_column":"person_id",
				"right_table":"speech",
				"right_column":"author_id"
			}
	
		],
		"group_by":["organisation.role", "organisation.name"],
		"order_by":[]
	},
	"filtering": {
		"columns":["organisation.name", "COUNT(speech.id) AS total_speeches"],
		"conditions": [
			{
				"column":"organisation.role",
				"operator":"=",
				"value":"'politicalParty'"
			},
			{
				"column":"speech.date",
				"operator":">=",
				"value":"affiliation.since"
			},
			{
				"column":"speech.date",
				"operator":"<=",
				"value":"affiliation.until"
			}
		],
		"limit":""
	}
}
